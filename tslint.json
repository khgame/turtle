{
  "linterOptions": {
    "autoFixOnSave": true,
    "exclude": [
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "array-type": [true, "array-simple"],
    "arrow-return-shorthand": true,
    "curly": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "quotemark": true,
    "forin": false,
    "indent": [true, "spaces", 4],
    "interface-name": true,
    "jsdoc-format": true,
    "new-parens": true,
    "no-angle-bracket-type-assertion": true,
    "no-construct": true,
    "no-console": false,
    "no-empty": false,
    "no-empty-interface": false,
    "no-var-keyword": true,
    "no-var-requires": true,
    "no-shadowed-variable": true,
    "label-position": true,
    "max-line-length": [
      true,
      180
    ],
    "object-literal-sort-keys": false,
    "prefer-for-of": false,
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "switch-default": true,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "use-isnan": true,
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case",
        "allow-leading-underscore",
        "allow-trailing-underscore",
        "allow-snake-case"
      ]
    },
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  }
}
